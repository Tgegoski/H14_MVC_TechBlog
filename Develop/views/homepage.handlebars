{{#each blogs as |blog| }}
<div class="row mb-4 blog">
  <div class="col-md-5">
    <h2>
      {{{get_emoji}}}
      <a href="/blog/{{blog.id}}">{{blog.name}}</a>
    </h2>
    <p>
      <span for="img" aria-label="arrow"></span>

      {{!-- <span class="">{{format_amount project.needed_funding}}</span> --}}

    </p>
    <p>Created by {{blog.user.name}} on {{format_date blog.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{blog.description}}
    </p>
  </div>
</div>
{{/each}}